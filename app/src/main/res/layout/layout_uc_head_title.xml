<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    app:layout_collapseMode="pin">

    <LinearLayout
        android:id="@+id/title_center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.github.utrtestapp.widget.CircleImageView
            android:id="@+id/title_uc_avater"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@mipmap/login_5" />

        <TextView
            android:id="@+id/title_uc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:paddingRight="15dp"
            android:text="Lover's Day"
            android:textColor="@color/color000000"
            android:textSize="28px" />
    </LinearLayout>

    <com.example.github.utrtestapp.widget.RoundProgressBar
        android:id="@+id/uc_progressbar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        app:round_max="360"
        app:round_progressColor="@android:color/white"
        app:round_width="1dp" />





</RelativeLayout>