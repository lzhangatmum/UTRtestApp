<?xml version="1.0" encoding="utf-8"?>
<com.example.github.utrtestapp.widget.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/middle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="300dp"
    android:tag="middle"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/frag_uc_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:text="Lover's Day"
                android:textColor="@color/cardview_shadow_start_color"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/frag_uc_msg_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_black_fillet"
                    android:gravity="center"
                    android:text="chat"
                    android:textColor="@color/cardview_shadow_start_color" />

                <TextView
                    android:id="@+id/frag_uc_follow_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_pink_fillet"
                    android:gravity="center"
                    android:text="follow"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </RelativeLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorf5f5f5" />

    </LinearLayout>
</com.example.github.utrtestapp.widget.DisInterceptNestedScrollView>